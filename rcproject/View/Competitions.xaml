<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rcproject.View.Competitions"
             xmlns:v="clr-namespace:rcproject.View"
             Title="UKRCCA">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!-- First Card -->
            <Frame CornerRadius="10" 
                   BorderColor="#006700" 
                   Padding="0" 
                   HeightRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCard1Tapped"/>
                </Frame.GestureRecognizers>
                <Grid ColumnDefinitions="*, *">
                    <Image Grid.Column="0"
                           Source="imageone.png"
                           Aspect="AspectFill"/>
                    <VerticalStackLayout Grid.Column="1" 
                                       Padding="15" 
                                       Spacing="10">
                        <Label Text="Competition" 
                               FontSize="20" 
                               TextColor="#006700"/>
                        <Label Text="Date: 25th March 2024" 
                               FontSize="16"/>
                        <Label Text="Location: Manchester, UK" 
                               FontSize="16"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Second Card -->
            <Frame CornerRadius="10" 
                   BorderColor="#006700" 
                   Padding="0" 
                   HeightRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCard2Tapped"/>
                </Frame.GestureRecognizers>
                <Grid ColumnDefinitions="*, *">
                    <Image Grid.Column="0"
                           Source="imagetwo.png"
                           Aspect="AspectFill"/>
                    <VerticalStackLayout Grid.Column="1" 
                                       Padding="15" 
                                       Spacing="10">
                        <Label Text="Competition" 
                               FontSize="20" 
                               TextColor="#006700"/>
                        <Label Text="Date: 15th April 2024" 
                               FontSize="16"/>
                        <Label Text="Location: Liverpool, UK" 
                               FontSize="16"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>
            <!-- Third Card -->
            <Frame CornerRadius="10" 
       BorderColor="#006700" 
       Padding="0" 
       HeightRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCard2Tapped"/>
                </Frame.GestureRecognizers>
                <Grid ColumnDefinitions="*, *">
                    <Image Grid.Column="0"
               Source="imagethree.png"
               Aspect="AspectFill"/>
                    <VerticalStackLayout Grid.Column="1" 
                           Padding="15" 
                           Spacing="10">
                        <Label Text="Competition" 
                   FontSize="20" 
                   TextColor="#006700"/>
                        <Label Text="Date: 1st December 2024" 
                   FontSize="16"/>
                        <Label Text="Location: Liverpool, UK" 
                   FontSize="16"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>