<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="rcproject.View.JoinPopup">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="Transparent">
        <ScrollView VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="20" StrokeThickness="2" Stroke="#006700" HorizontalOptions="Center" VerticalOptions="Center">
                <StackLayout Spacing="10">
                    <Entry Placeholder="Enter your name" Text="{Binding UserName, Mode=TwoWay}" BackgroundColor="White" PlaceholderColor="#006700" TextColor="#006700"/>
                    <Entry Placeholder="Enter join code" Text="{Binding JoinCode}" IsPassword="True" BackgroundColor="White" PlaceholderColor="#006700" TextColor="#006700"/>
                    <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" Margin="0,10,0,0"/>
                    <Button Text="Join" Command="{Binding JoinCommand}" BackgroundColor="#006700" TextColor="White" Margin="0,20,0,0"/>
                </StackLayout>
            </Border>
        </ScrollView>
    </Grid>
</toolkit:Popup>